        <div class="container mx-auto px-6 text-center text-slate-400">
             <p>&copy; 2025 WIDEROOMS. All Rights Reserved.</p>
             <p class="text-sm mt-2">Personalized Your Home</p>
        </div>
    </footer>

    <script>
        // --- Mobile menu toggle ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // --- Gemini AI Idea Generator ---
        const generateBtn = document.getElementById('generate-idea-btn');
        const loader = document.getElementById('loader');
        const resultContainer = document.getElementById('idea-result');

        generateBtn.addEventListener('click', async () => {
            const roomType = document.getElementById('roomType').value;
            const style = document.getElementById('style').value;
            const keywords = document.getElementById('keywords').value;

            if (!style) {
                alert('Please enter your desired style.');
                return;
            }

            // --- Show loader and hide previous result ---
            loader.classList.remove('hidden');
            resultContainer.style.display = 'none';
            resultContainer.textContent = '';
            
            generateBtn.disabled = true;
            generateBtn.classList.add('opacity-50', 'cursor-not-allowed');

            // --- Construct the prompt for Gemini ---
            const prompt = `Generate a detailed interior design concept for a "${roomType}" with a "${style}" theme. Additional keywords: "${keywords}". Please structure the response with these sections: 1. Main Concept, 2. Color Palette, 3. Furniture & Decor, and 4. Lighting.`;
            
            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = ""; // Canvas will provide the key
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API error: ${response.statusText}`);
                }

                const result = await response.json();
                
                let text = 'Sorry, we couldn\'t generate an idea at this time.';
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    text = result.candidates[0].content.parts[0].text;
                }
                
                // --- Display the result ---
                resultContainer.textContent = text;
                resultContainer.style.display = 'block';

            } catch (error) {
                console.error("Error calling Gemini API:", error);
                resultContainer.textContent = 'An error occurred while generating the idea. Please try again later.';
                resultContainer.style.display = 'block';
            } finally {
                // --- Hide loader and re-enable button ---
                loader.classList.add('hidden');
                generateBtn.disabled = false;
                generateBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        });
    </script>
</body>
</html>
